<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextQuest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6B8FD4</item>
        <item name="android:textSize"> 18sp </item>
        <item name="android:fontFamily"> @font/txt </item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background"> @drawable/screen  </item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#2c3837</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TextQuest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TextQuest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TextQuest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>